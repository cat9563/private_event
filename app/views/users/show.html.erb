<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>

      <ul id="events">
        <% @user.events.each do |event| %>
          <li>
            <%= event.title %>
          </li>
        <% end %>
      </ul>

      <h2> Attened Events </h2>
      <ul id="events">

        <% @events.attendees.each do |attendee| %>
        <li>
          <%= link_to attendee.name, user_path(attendee.id) %>
        </li>
        <% end %>
      </ul>

    </section>
  </aside>
</div>
