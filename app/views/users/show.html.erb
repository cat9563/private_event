<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>

      <h2> Events your hosting </h2>
      <ul id="events">

        <% @user.events.each do |event| %>
        <li>
          <%= link_to event.title, event_path(event.id) %>
        </li>
        <% end %>
      </ul>

    </section>
  </aside>
</div>
