<% provide(:title, @events.title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @events.creator.name %>
      </h1>

      <h1>
        <%= @events.title %>
      </h1>
        <p>
          <%= @events.description %>
        </p>

        <h2> whos attending </h2>
        <ul id="events">

          <% @events.attendees.each do |attendee| %>
          <li>
            <%= link_to attendee.name, user_path(attendee.id) %>
          </li>
          <% end %>
        </ul>
    </section>
  </aside>
</div>
